            <h4>{{current.name}}</h4>
            <form name="updateCupCakeForm" action="{{'/Api/CupCakeApi/PostCupCake?id=' + current.id + '&name=' + current.name + '&price=' + current.price}}" class="form-horizontal" method="post"> 
            <div style="display:none">
                <input type="text" ng-model="current.id" name="inputid" />
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Name</label>
                <input ng-model="current.name" name="inputname" type="text" required /> 
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Price</label>
                <input ng-model="current.price" name="inputprice" type="text" required /> 
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Date Created</label>
                <input type="text" ng-model="current.dateTimeCreated" name="inputdateTimeCreated" type="text" readonly="readonly" />
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Date Last Update</label>
                <input type="text" ng-model="current.dateTimeLastModified" name="inputdateTimeLastModified" type="text" readonly="readonly"/>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-8 col-sm-4">
                <input type="submit" value="Update" class="btn btn-success btn-block" /> 
                </div>
            </div> 
            </form>
        </div>
   
            




